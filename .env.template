# Dynatrace MCP Server Configuration Template
# Copy this file to .env and fill in your values

# Required: Dynatrace environment URL
DT_ENVIRONMENT=https://abc12345.apps.dynatrace.com

# Authentication Option 1: OAuth credentials (recommended)
OAUTH_CLIENT_ID=dt0s02.XXXXXXXX
OAUTH_CLIENT_SECRET=dt0s02.XXXXXXXX.XXXXXXXXXXXXXXXX
DT_ACCOUNT_URN=urn:dtaccount:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Authentication Option 2: Platform token (alternative to OAuth)
# DT_PLATFORM_TOKEN=dt0c01.XXXXXXXX.XXXXXXXXXXXXXXXX

# Optional: Custom SSO URL (defaults to https://sso.dynatrace.com/sso/oauth2/token)
# DT_SSO_URL=https://sso.dynatrace.com/sso/oauth2/token

# Optional: Grail query budget in GB (default: 1000)
# DT_GRAIL_QUERY_BUDGET_GB=1000

# Optional: Slack connector ID for sending Slack messages
# SLACK_CONNECTION_ID=your-slack-connection-id

# Optional: Logging configuration
# MCP_LOG_DIR=/path/to/logs
# MCP_LOG_LEVEL=info

# Optional: Log DQL queries to files (default: false)
# When enabled, queries are saved to: {log_dir}/DQL/YYYYMMDD/{name}.YYYYMMDD.HHmmss.dql
# DT_LOG_DQL_QUERIES=true
